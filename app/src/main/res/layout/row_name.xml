<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        android:padding="5dp">

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Update First Name"/>

    <EditText
        android:id="@+id/update_first"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_below="@id/update"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/update_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/update"
        android:text="Update First Name"/>

    <EditText
        android:id="@+id/update_last"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_below="@id/update_one"
        android:layout_toRightOf="@id/update"
        android:textSize="15sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/update_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="17sp"
        android:layout_below="@id/update_first"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>




</RelativeLayout>