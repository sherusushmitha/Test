<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.fashion.activities.OTPActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/otp2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="OTP Verification"
        android:textSize="25sp"
        android:layout_below="@id/imageview"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:text="Enter the OTP send to"
        android:layout_below="@id/text"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_below="@id/text"
        android:text="+91-7075463936"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/textview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/edit"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit1"
        android:layout_below="@id/textview"
        android:layout_toRightOf="@id/edit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit2"
        android:layout_below="@id/textview"
        android:layout_toRightOf="@id/edit1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit3"
        android:layout_below="@id/textview"
        android:layout_toRightOf="@id/edit2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Don't receive the OTP?"
        android:layout_below="@id/edit2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resend_otp"
        android:text="RESEND OTP"
        android:textColor="#2874A6"
        android:layout_below="@id/edit2"
        android:layout_toRightOf="@id/text2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/otp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button1"
        android:text="VERIFY &amp; PROCEED" />

</RelativeLayout>