<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E8E8"
    tools:context=".ui.home.Continue_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/delivery_tool2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#239B56"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:title="Address"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/AppTheme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/delivery_tool2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/widget"

        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="Sushma"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:text="Home"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/home"
                android:textColor="#2ECC71"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:text="395/A,GUNDLASINGARAM"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text1"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:text="Vidyaranyapuri"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text3"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:layout_marginTop="5dp"
                android:text="warangal,Telangana 506009"
                android:layout_below="@id/text4"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:text="Mobile:"
                android:layout_below="@id/text5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:text="9874563210"
                android:layout_toRightOf="@id/text6"
                android:layout_below="@id/text5"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/textview"
                android:text="CHANGE OR ADD ADDRESS"
                android:layout_below="@id/text7"
                android:layout_marginTop="20dp"
                android:background="@drawable/pin"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:gravity="center"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text8"
        android:text="DELIVERY ESTIMATES"
        android:layout_below="@id/widget"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/widget1"
        android:layout_below="@id/text8"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageview"
                android:src="@drawable/chiken1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text9"
                android:text="Estimate delivery by today 2PM"
                android:layout_toRightOf="@id/imageview"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:id="@+id/widget2"
        android:layout_below="@id/widget1"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text13"
                android:text="PRICE DETAILS"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view3"
                android:background="#B2BABB"
                android:layout_below="@id/text13"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text14"
                android:text="Total MRP"
                android:layout_below="@id/view3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text15"
                android:text="Rs 450"
                android:layout_below="@id/view3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginRight="25dp"/>


            //
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text16"
                android:text="Discount on MRP"
                android:layout_below="@id/text14"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text17"
                android:text="Rs 50"
                android:layout_below="@id/text14"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginRight="25dp"/>

            //
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text18"
                android:text=" Coupon Discount"
                android:layout_below="@id/text16"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text19"
                android:text="Apply Coupon"
                android:layout_below="@id/text16"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="#2874A6"
                android:layout_marginRight="25dp"/>
            //
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text20"
                android:text=" Delivery Charges"
                android:layout_below="@id/text18"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text21"
                android:text="Free"
                android:layout_below="@id/text18"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="#2874A6"
                android:layout_marginRight="25dp"/>
            //
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view4"
                android:background="#B2BABB"
                android:layout_below="@id/text20"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text22"
                android:text="Total Amount"
                android:layout_below="@id/view4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text23"
                android:text="Rs 500"
                android:layout_below="@id/view4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginRight="25dp"/>

            //

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/text22"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#B2BABB" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/delivery_card"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_below="@+id/widget2"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Address"
                android:textColor="#E74C3C"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_textview"
                android:text="sheru sushma"
                android:layout_marginLeft="38dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_textview1"
                android:text="395/A"
                android:layout_marginLeft="38dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_textview2"
                android:text="gundlasingaram"
                android:layout_marginLeft="38dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_textview3"
                android:text="506009,Warangal"
                android:layout_marginLeft="38dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_textview4"
                android:text="ph:9876541230"
                android:layout_marginLeft="38dp"
                android:textSize="15sp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    </androidx.core.widget.NestedScrollView>-->




        </RelativeLayout>
    </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#283747">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text25"
                    android:text="Rs 500"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text26"
                    android:text="View price details"
                    android:layout_below="@id/text25"
                    android:layout_marginLeft="10dp"
                    android:textColor="#2874A6"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_continue"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:text="CONTINUE"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/resource"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



</RelativeLayout>