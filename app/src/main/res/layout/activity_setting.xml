    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/widget"
        android:layout_below="@id/delivery_tool8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:text="Notifications"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="#424949"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="This ill not affect any order updates"
                android:layout_below="@id/text"
                android:layout_marginLeft="10dp"
                android:textColor="#1A5276"
                android:layout_marginTop="5dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view"
                android:background="@color/black"
                android:layout_below="@id/text1"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:layout_below="@id/view"
                android:text="Optimized Experience"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#424949"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/text3"
                android:layout_below="@id/text2"
                android:text="For internet connection quality"
                android:layout_marginLeft="10dp"
                android:textColor="#1A5276"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:layout_below="@id/text3"
                android:textSize="15sp"
                android:text="Optimized Image Quality"
                android:layout_marginLeft="15dp"
                android:textColor="#1A5276"
                android:layout_marginTop="20dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
               android:layout_below="@id/text3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:layout_below="@id/text4"
                android:text="Optimized Checkout flow"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:textSize="15sp"
                android:textColor="#1A5276"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_below="@id/text4"
                android:layout_marginTop="27dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view1"
                android:background="@color/black"
                android:layout_below="@id/text5"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:text="User Information"
                android:layout_below="@id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#424949"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:text="Information and Contacts"
                android:layout_below="@id/text6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#1A5276"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:layout_below="@id/text6"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text8"
                android:layout_below="@id/text7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Password"
                android:textColor="#1A5276"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/image1"
                android:layout_below="@id/text7"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view2"
                android:background="@color/black"
                android:layout_below="@id/text8"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text10"
                android:text="App Settings"
                android:layout_below="@id/view2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="#424949"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text11"
                android:layout_below="@id/text10"
                android:layout_marginLeft="10dp"
                android:text="Language"
                android:layout_marginTop="10dp"
                android:textColor="#1A5276"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/image2"
                android:layout_below="@id/text10"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/button1"
        android:text="LOG OUT"
        android:layout_below="@id/widget"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"/>


</RelativeLayout>