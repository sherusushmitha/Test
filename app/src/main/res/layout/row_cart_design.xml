<!--            android:gravity="center"-->
<!--            android:layout_marginRight="25dp"-->
<!--            android:background="@drawable/resource"-->
<!--            />-->
       </RelativeLayout>

        </androidx.cardview.widget.CardView>

</RelativeLayout>