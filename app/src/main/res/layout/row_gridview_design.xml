<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:background="#CCD1D1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resource"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp">



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/chiken1"/>


            <TextView
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:background="@drawable/text3"
                android:gravity="center"
                android:padding="2dp"
                android:text="35% OFF"
                android:textColor="@color/white"
                android:textSize="8sp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resource"
            android:text="Fruits"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productname"
            android:text="Fruits"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/textview"-->
<!--            android:layout_below="@id/product_name"-->
<!--            android:text="Natural Fruits"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:textColor="@color/black"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_cost"
            android:text="Rs.500"
            android:layout_below="@id/product_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="35dp"-->
<!--            android:id="@+id/button1"-->
<!--            android:layout_below="@id/text1"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:background="@drawable/button3"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:text="Add"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/product_cost"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="-"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="AddCart"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:textStyle="bold"
                android:text="+"
                android:textSize="15sp"
                android:textColor="@color/white"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>